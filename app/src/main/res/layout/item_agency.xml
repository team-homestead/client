<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  style="@style/ListItemContainer">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/agency_name_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:background="@color/colorPrimary"
      android:padding="8dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_alignParentTop="true"
      android:layout_alignParentStart="true"/>

    <ImageButton
      android:id="@+id/agency_favorite_button"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:src="@drawable/ic_heart_grey"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"/>

    <TextView
      android:id="@+id/agency_address_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="6dp"
      android:textSize="10sp"
      android:layout_below="@id/agency_name_title"/>

    <TextView
      android:id="@+id/agency_phone_number_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="6dp"
      android:textSize="10sp"
      android:layout_below="@id/agency_favorite_button"/>

    <TextView
      android:id="@+id/agency_email_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="6dp"
      android:textSize="10sp"
      android:layout_below="@id/agency_address_text"/>

    <TextView
      android:id="@+id/agency_type_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="6dp"
      android:textSize="10sp"
      android:layout_below="@id/agency_phone_number_text"/>

    <TextView
      android:id="@+id/agency_service_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="6dp"
      android:textSize="10sp"
      android:layout_below="@id/agency_email_text"
      android:layout_centerHorizontal="true"/>

    <TextView
      android:id="@+id/agency_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="6dp"
      android:textSize="10sp"
      android:layout_below="@id/agency_service_type"
      android:layout_centerHorizontal="true"/>

  </RelativeLayout>

</androidx.cardview.widget.CardView>